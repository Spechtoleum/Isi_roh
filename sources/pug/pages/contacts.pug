extends ../_skeleton

block variables
	- pageName = 'Contacts'

block page
	include ../sections/_header-classic

	+breadcrumbs

	//Mailform
	section.section.section-md.section-relative.bg-transparent
		.container
			.row.row-30.justify-content-center
				.col-md-8.col-lg-5
					.contact-wrap
						h3 Get in Touch
						p A falsis, tata salvus lactea. Cum historia observare, omnes agripetaes aperto fatalis, ferox dominaes. Tuss favere, tanquam mirabilis fermium. Ubi est neuter bromium? Fidelis.
						.contact-info-inline
							span.contact-info-inline-meta Follow  Me:
							ul.list-inline
								li.list-inline-item: a.icon.icon-md-middle.icon-grey-9.fa-facebook(href='#')
								li.list-inline-item: a.icon.icon-md-middle.icon-grey-9.fa-twitter(href='#')
								li.list-inline-item: a.icon.icon-md-middle.icon-grey-9.fa-google(href='#')
								li.list-inline-item: a.icon.icon-md-middle.icon-grey-9.fa-youtube(href='#')
						.contact-info-inline
							span.contact-info-inline-meta E-mail:
							a(href='mailto:#') info@demolink.org
				.col-md-8.col-lg-7
					//RD Mailform
					form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
						.row.row-20.row-narrow
							.col-lg-6
								.form-wrap
									label.form-label(for="contact-name") First Name
									input#contact-name.form-input(type="text" name="name" data-constraints='@Required')
							.col-lg-6
								.form-wrap
									label.form-label(for="contact-phone") Phone
									input#contact-phone.form-input(type="text" name="phone" data-constraints='@Required @PhoneNumber')
							.col-lg-6
								.form-wrap
									label.form-label(for="contact-last-name") Last Name
									input#contact-last-name.form-input(type="text" name="last-name" data-constraints='@Required')
							.col-lg-6
								.form-wrap
									label.form-label(for="contact-email") E-Mail
									input#contact-email.form-input(type="email" name="email" data-constraints='@Required @Email')
							.col-lg-12
								.form-wrap
									label.form-label(for="contact-message") Message
									textarea#contact-message.form-input(name="message" data-constraints='@Required')
							.col-lg-12
								button(type="submit").button.button-primary.button-circle.button-shadow Submit



	//Google Map
	section.section
		//Please, add the data attribute data-key="YOUR_API_KEY" in order to insert your own API key for the Google map.
		//Please note that YOUR_API_KEY should replaced with your key.
		//Example: <div class="google-map-container" data-key="YOUR_API_KEY">
